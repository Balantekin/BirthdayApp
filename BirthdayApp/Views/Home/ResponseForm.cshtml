
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResponseForm</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body>

    <div class="card">
        <div class="card-header text-center bg-success"><h4>Birthday Party Form</h4></div>
        <div class="card-body">

            <div>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()

                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBox("Name", null, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        <label>E-mail</label>
                        @Html.TextBox("Email", null, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBox("Phone", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Will Attend?</label>
                        @Html.DropDownList("Will Attend", new[] {new SelectListItem(){Text="Yes, Attending",Value=bool.TrueString},
                                                           new SelectListItem() { Text = "No, Not Attending", Value = bool.FalseString } }, 
                                                           new { @class = "form-control" }
                                                           )

                    </div>

                    <div class="text-center">
                        <input type="submit" value="Send" class="btn btn-success"/>
                    </div>

                }


            </div>
        </div>
    </div>
    
</body>
</html>
