@model List<BirthdayApp.Models.UserResponse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListResponse</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div> 
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    
                    <th>Will Attend</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    if (item.WillAttend == true)
                    {
                <tr class="bg-transparent">
                    <td>@item.Name</td>

                    <td>Yes</td>
                    <td>@Html.ActionLink("Details", "Details", new { @id = item.Id }, new { @class = "btn btn-primary btn-xs" })</td>
                    <td>@Html.ActionLink("Update", "Update", new { @id = item.Id }, new { @class = "btn btn-warning btn-xs" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { @id = item.Id }, new { @class = "btn btn-danger btn-xs" })</td>

                </tr>
                    }
                    else
                    {
            <tr class="bg-light">
                <td>@item.Name</td>

                <td>No</td>
                <td>@Html.ActionLink("Details", "Details", new { @id = item.Id }, new { @class = "btn btn-primary btn-xs" })</td>
                <td>@Html.ActionLink("Update", "Update", new { @id = item.Id }, new { @class = "btn btn-warning btn-xs" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { @id = item.Id }, new { @class = "btn btn-danger btn-xs" })</td>
            </tr>
                    }

                }
            </tbody>
        </table>
        @Model
    </div>
</body>
</html>
